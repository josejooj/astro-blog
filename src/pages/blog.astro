import Layout from "../layouts/base.astro";
import PostButton from "../components/post.button.astro";

const allPosts = Object.values(import.meta.glob("./posts/*.md", { eager: true }));
---

<Layout title="Blog">
	<h1>Sobre mim</h1>
	<p>eu sou o jos√©.</p>
	<ul>
		{allPosts.map((post: any) => <PostButton title={post.frontmatter.title} url={post.url} created={post.frontmatter.pubDate} />)}
	</ul>
	<script>
		import "../scripts/menu.js";
	</script>
</Layout>
